{
  "name": "@bob/ui",
  "version": "0.0.0",
  "private": true,
  "import": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./dist/output.css": {
      "import": "./dist/output.css",
      "require": "./dist/output.css"
    }
  },
  "scripts": {
    "lint": "eslint . --max-warnings 0",
    "generate:component": "turbo gen react-component",
    "check-types": "tsc --noEmit",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist",
    "build:style": "npx @tailwindcss/cli -i ./src/styles/input.css -o ./dist/output.css",
    "dev:style": "npx @tailwindcss/cli -i ./src/styles/input.css -o ./dist/output.css --watch",
    "build-fast": "tsup src/index.ts --format=esm,cjs --no-dts --watch",
    "build": "tsup src/index.ts --format=esm,cjs --dts --clean --minify --sourcemap && pnpm build:style",
    "dev": "concurrently \"pnpm build-fast\" \"pnpm dev:style\""
  },
  "devDependencies": {
    "@bob/eslint-config": "workspace:*",
    "@bob/typescript-config": "workspace:*",
    "@tailwindcss/cli": "^4.1.12",
    "@types/node": "^22.15.3",
    "@types/react": "19.1.0",
    "@types/react-dom": "19.1.1",
    "@types/react-syntax-highlighter": "^15.5.13",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.1",
    "eslint": "^9.34.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.12",
    "tsup": "^8.5.0",
    "typescript": "5.9.2"
  },
  "dependencies": {
    "@radix-ui/react-slot": "^1.2.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.542.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-syntax-highlighter": "^15.6.6",
    "tailwind-merge": "^3.3.1"
  }
}
